	<select id="findSignList" resultMap="SignListViewMap"
		parameterType="java.lang.String">
		select
		* ,
		l.create_time as createTime
		from
		educationalcenter.`t_student` s left join
		educationalcenter.`t_lesson_sign` l on l.student_code =
		s.code
		where
		l.schedule_code = #{scheduleCode , jdbcType=VARCHAR}
	</select>


