	<!-- 根据课程编码，班级编码查询学生签到信息 2017-03-17 zhy -->
	<select id="findStudentSignByLessonAndClass" parameterType="com.matrix.pojo.dto.LessonSignDto"
		resultMap="BaseResultMap">
		SELECT
		ts.`name`,
		DATE_FORMAT(tls.create_time,'%Y-%m-%d %H:%i:%s') as
		sign_time
		FROM
		educationalcenter.t_study_schedule
		AS tss
		LEFT JOIN
		educationalcenter.t_lesson_sign AS tls ON
		tss.schedule_code =
		tls.schedule_code
		LEFT JOIN
		educationalcenter.t_student AS ts ON
		tls.student_code =
		ts.`code`
		<where>
			tss.lesson_code = #{lessonCode,jdbcType=VARCHAR}
			AND
			tss.classes_code LIKE CONCAT('%',#{classCode,jdbcType=VARCHAR},'%');
		</where>
	</select>
